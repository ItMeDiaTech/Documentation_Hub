{
  "$schema": "https://raw.githubusercontent.com/modelcontextprotocol/specification/main/schema/2024-11-05/schema.json",
  "mcpServers": {
    "github.com/modelcontextprotocol/servers/tree/main/src/filesystem": {
      "description": "Filesystem operations server - read/write files, create directories, search files, and manage file system operations with directory access control",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "C:\\Users\\DiaTech\\Pictures\\DiaTech\\Programs\\DocHub\\development\\Template_UI"
      ],
      "disabled": false,
      "alwaysAllow": [
        "read_text_file",
        "read_media_file",
        "read_multiple_files",
        "write_file",
        "edit_file",
        "create_directory",
        "list_directory",
        "list_directory_with_sizes",
        "move_file",
        "search_files",
        "directory_tree",
        "get_file_info",
        "list_allowed_directories"
      ]
    },
    "github.com/modelcontextprotocol/servers/tree/main/src/git": {
      "description": "Git MCP server - Provides tools for Git repository interaction and automation including status, diff, commit, branch operations, and more",
      "command": "uvx",
      "args": ["mcp-server-git", "--repository", "."],
      "disabled": false,
      "alwaysAllow": [
        "git_status",
        "git_diff_unstaged",
        "git_diff_staged",
        "git_diff",
        "git_diff",
        "git_commit",
        "git_add",
        "git_reset",
        "git_log",
        "git_create_branch",
        "git_checkout",
        "git_show",
        "git_branch"
      ]
    },
    "github.com/modelcontextprotocol/servers/tree/main/src/sequentialthinking": {
      "description": "Sequential thinking server for enhanced reasoning and problem-solving workflows",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "disabled": false,
      "alwaysAllow": []
    },
    "github.com/upstash/context7-mcp": {
      "description": "Context7 MCP - Up-to-date code documentation for any prompt. Fetches version-specific documentation and code examples straight from the source.",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@upstash/context7-mcp"],
      "env": {
        "CONTEXT7_API_KEY": "ctx7sk-1c54c4fb-4a43-426e-9609-a573ef52283c"
      },
      "disabled": false,
      "alwaysAllow": ["resolve-library-id", "get-library-docs"]
    },
    "dt-cli-rag-maf": {
      "description": "Local RAG with Multi-Agent Framework - advanced semantic search and intelligent agent orchestration",
      "command": "python",
      "args": ["-m", "src.mcp_server.server", "--host", "127.0.0.1", "--port", "8765"],
      "cwd": "C:\\Users\\DiaTech\\Pictures\\DiaTech\\Programs\\DocHub\\development\\dt-cli",
      "env": {
        "PYTHONPATH": "C:\\Users\\DiaTech\\Pictures\\DiaTech\\Programs\\DocHub\\development\\dt-cli",
        "RAG_DB_PATH": "C:\\Users\\DiaTech\\Pictures\\DiaTech\\Programs\\DocHub\\development\\Template_UI\\.mcp-cache\\dt-cli-rag",
        "EMBEDDING_MODEL": "all-MiniLM-L6-v2",
        "CHUNK_SIZE": "1000",
        "CHUNK_OVERLAP": "200"
      },
      "disabled": true,
      "alwaysAllow": ["rag_query", "rag_index", "rag_status", "maf_orchestrate", "maf_status"]
    }
  }
}
