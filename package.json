{
  "name": "documentation-hub",
  "version": "1.0.0",
  "description": "A modern document processing and session management desktop application",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:electron": "electron-builder",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "npm run build && npm run build:electron",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "typescript",
    "react",
    "vite",
    "desktop"
  ],
  "author": "DiaTech",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "24.5.2",
    "@types/react": "19.1.14",
    "@types/react-dom": "19.1.9",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "5.0.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.20",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.2",
    "react-router": "^7.9.3",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "to-ico": "^1.1.5",
    "typescript": "^5.3.3",
    "vite": "^7.1.7",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cmdk": "^1.1.1",
    "docx": "^9.5.1",
    "electron-updater": "^6.6.2",
    "fast-diff": "^1.3.0",
    "fast-xml-parser": "^5.2.5",
    "framer-motion": "^12.23.22",
    "fuse.js": "^7.1.0",
    "idb": "^8.0.3",
    "jszip": "^3.10.1",
    "lucide-react": "^0.544.0",
    "mammoth": "^1.11.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.3",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.8"
  },
  "build": {
    "appId": "com.documentationhub.app",
    "productName": "Documentation Hub",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "publish": [
        "github"
      ],
      "icon": "build/icon.ico",
      "artifactName": "Documentation-Hub-Setup-${version}.${ext}"
    },
    "msi": {
      "artifactName": "Documentation-Hub-${version}.msi",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": false,
      "runAfterFinish": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false,
      "artifactName": "Documentation-Hub-Setup-${version}.exe"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity",
      "publish": [
        "github"
      ],
      "artifactName": "Documentation-Hub-${version}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "Documentation-Hub-${version}.dmg"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office",
      "publish": [
        "github"
      ],
      "artifactName": "Documentation-Hub-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "ItMeDiaTech",
      "repo": "Documentation_Hub",
      "private": false
    }
  }
}
