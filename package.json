{
  "name": "documentation-hub",
  "version": "5.0.11",
  "description": "A modern document processing and session management desktop application",
  "author": "DiaTech",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:electron": "electron-builder",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "npm run build && npm run build:electron",
    "release": "npm run build && npx electron-builder && node scripts/generate-latest-yml.js && npx electron-builder --publish always -c.publish.releaseType=release && gh release upload v%npm_package_version% release/latest.yml --clobber",
    "update-server": "node scripts/local-update-server.js",
    "test:update": "concurrently -k \"npm run dev\" \"wait-on http://localhost:5173 && node -e \\\"require('child_process').spawn(require('electron'), ['.'], {stdio:'inherit', env:{...process.env, FORCE_DEV_UPDATE_CONFIG:'true'}})\\\"\"",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:toc": "node test-debug-toc.js",
    "docs:generate": "typedoc",
    "docs:watch": "typedoc --watch",
    "generate:icons": "node build/create-icon.js",
    "prepare": "husky"
  },
  "keywords": [
    "electron",
    "typescript",
    "react",
    "vite",
    "desktop"
  ],
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/postcss": "4.1.18",
    "@tailwindcss/vite": "4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/adm-zip": "^0.5.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "25.0.3",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "8.52.0",
    "@typescript-eslint/parser": "8.53.0",
    "@vitejs/plugin-react": "5.1.2",
    "autoprefixer": "^10.4.23",
    "canvas": "^3.2.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "26.4.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "0.7.2",
    "react-router": "7.12.0",
    "tailwindcss": "4.1.18",
    "ts-jest": "^29.4.6",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "0.14.6",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@azure/msal-node": "^3.8.4",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/diff": "^7.0.2",
    "@types/react-window": "^1.8.8",
    "adm-zip": "^0.5.16",
    "all": "^0.0.0",
    "better-sqlite3": "^12.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "diff": "^8.0.3",
    "docx": "^9.5.1",
    "docxmlater": "file:../docxmlater",
    "electron-log": "^5.4.3",
    "electron-updater": "6.8.0",
    "express": "^5.2.1",
    "fast-diff": "^1.3.0",
    "framer-motion": "^12.26.2",
    "fuse.js": "^7.1.0",
    "idb": "^8.0.3",
    "lucide-react": "^0.562.0",
    "mammoth": "^1.11.0",
    "p-limit": "7.2.0",
    "react": "^19.2.3",
    "react-dom": "19.2.3",
    "react-router-dom": "7.12.0",
    "react-window": "^2.2.4",
    "recharts": "3.6.0",
    "rimraf": "^6.1.2",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.10"
  },
  "build": {
    "appId": "com.documentationhub.app",
    "productName": "Documentation Hub",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "ItMeDiaTech",
        "repo": "Documentation_Hub",
        "releaseType": "release"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "**/better-sqlite3/**"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/app-update.yml",
        "to": "app-update.yml"
      },
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      }
    ],
    "icon": "build/icon.png",
    "win": {
      "target": [
        "msi"
      ],
      "icon": "build/icon.ico",
      "artifactName": "Documentation-Hub-${version}.${ext}"
    },
    "msi": {
      "upgradeCode": "CF863E5D-30C2-470B-B337-4373B543F563",
      "oneClick": false,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "warningsAsErrors": true,
      "shortcutName": "DocumentationHub"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icon.png",
      "artifactName": "Documentation-Hub-${version}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "Documentation-Hub-${version}.dmg"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office",
      "icon": "build",
      "artifactName": "Documentation-Hub-${version}.${ext}"
    }
  }
}
